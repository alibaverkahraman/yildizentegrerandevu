	xmlns:core="sap.ui.core">
	<Popover
		showHeader="false"
		placement="Bottom"
		contentWidth="300px">
		<List>
			<items>
				<StandardListItem
					iconInset="false"
					adaptTitleSize="false"
					title="Demo"
					description="Demo">
					<avatar>
						<Avatar displaySize="XL"/>
					</avatar>
				</StandardListItem>
			</items>
		</List>
		<footer>
			<OverflowToolbar height="50px">
				<!-- <Button type="Transparent" icon="sap-icon://action-settings" text="Ayarlar" /> -->
				<ToolbarSpacer/>
				<!-- <Button id="close" text="Kapat" press="handleClosePress" /> -->
				<Button
					type="Transparent"
					text="Çıkış Yap"
					press="logout"
					icon="sap-icon://log"
					tooltip="Çıkış Yap"
					busyIndicatorDelay="0"/>
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>